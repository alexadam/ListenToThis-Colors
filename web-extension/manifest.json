{
    "manifest_version": 2,
    "name": "ListenToThis-Highlight",
    "version": "1",
    "author": "Alex Adam",
    "homepage_url": "https://github.com/alexadam/ListenToThis-Highlight",
    "description": "",
    "options_page": "options.html",
    "icons": {
        "48": "icons/logo.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "activeTab",
        "tabs",
        "http://*/*",
        "https://*/*",
        "<all_urls>",
        "storage"
    ]
}
